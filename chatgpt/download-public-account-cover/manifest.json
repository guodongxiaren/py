{
  "manifest_version": 3,
  "name": "Download Public Account Cover",
  "version": "1.0",
  "description": "Download the cover image of public accounts on WeChat.",
  // "icons": [
    // { "src": "icon16.png", "sizes": "16x16" },
    // { "src": "icon32.png", "sizes": "32x32" },
    // { "src": "icon48.png", "sizes": "48x48" },
    // { "src": "icon128.png", "sizes": "128x128" }
  // ],
  "background": {
    "service_worker": "background.js"
  },
  "permissions": [
    "activeTab",
    "downloads"
  ],
  "host_permissions": [
    "https://mp.weixin.qq.com/*"
  ],
  "content_scripts": [
    {
      "matches": [
        "https://mp.weixin.qq.com/s/*"
      ],
      "js": [
        "content.js"
      ]
    }
  ],
  "action": {
    "default_title": "Download Public Account Cover",
    "default_icon": "icon48.png",
    "default_popup": "popup.html"
  }
}
